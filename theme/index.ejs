<!doctype html>
<html>

<head>
  <title>
    <% if(typeof post !== 'undefined') { %>
    <%= post.title %> —
    <% } %>
    Emile Nijssen's Blog
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="icon" type="image/png" href="/img/me.png">

  <script async src="https://www.googletagmanager.com/gtag/js?id=G-3P1HN9EXFE"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-3P1HN9EXFE');
  </script>
</head>

<body>

  <a href="/"><img class="me" src="/img/me.png" alt="My head" /></a>
  <div class="sitetitle">Emile Nijssen's Blog</div>

  <% if(typeof post !== 'undefined') { %>
  <%- post.html; %>

  <a class="back" href="/">← All Posts</a>

  <% } else { %>
  <ol class="posts" reversed>
    <% posts.forEach(post => { %>
    <li><a href="/<%= post.id %>/"><%= post.title %></a></li>
    <% }) %>
  </ol>
  <% } %>
</body>

</html>